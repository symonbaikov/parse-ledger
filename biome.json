{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**",
      "**/out/**",
      "**/build/**",
      "**/coverage/**",
      "frontend/next-env.d.ts",
      "frontend/.intlayer/**",
      ".intlayer/**",
      "frontend/.next/**",
      "frontend/out/**",
      "backend/uploads/**",
      "**/stories/**",
      "**/storybook-static/**",
      "**/*.stories.*",
      "**/docs/**",
      "**/.claude/**",
      "**/.agent/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "trailingCommas": "all",
        "semicolons": "always",
        "arrowParentheses": "asNeeded"
        },
        "parser": {
          "unsafeParameterDecoratorsEnabled": true
      }
    },
  "linter": {
    "enabled": true,
    "rules": {
        "recommended": true,
        "a11y": {
          "useButtonType": "off"
        },
        "correctness": {
          "useExhaustiveDependencies": "off"
        },
        "suspicious": {
          "noExplicitAny": "off"
        },
        "style": {
          "useImportType": "off",
          "useNodejsImportProtocol": "off",
          "noUnusedTemplateLiteral": "off"
        },
        "complexity": {
          "noForEach": "off"
        }
    }
  },
  "overrides": [
    {
      "include": [
        "frontend/**/*.{ts,tsx,js,jsx}",
        "app/**/*.{ts,tsx,js,jsx}"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "useButtonType": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "include": [
        "**/@tests/**/*.{ts,tsx}",
        "**/test/**/*.{ts,tsx}"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "useImportType": "off"
          }
        }
      },
      "organizeImports": {
        "enabled": false
      }
    }
  ]
}
