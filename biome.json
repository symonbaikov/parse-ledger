{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**",
      "**/out/**",
      "**/build/**",
      "**/coverage/**",
      "frontend/next-env.d.ts",
      "frontend/.intlayer/**",
      "frontend/.next/**",
      "frontend/out/**",
      "backend/uploads/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "trailingCommas": "all",
        "semicolons": "always",
        "arrowParentheses": "asNeeded"
      }
    },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
